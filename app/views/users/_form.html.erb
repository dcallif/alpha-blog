<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="form">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form" align="center">
  <div class="form-group" align="center">
    <%= form.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
  </div>

  <div class="form-group" align="center">
    <%= form.email_field :email, class: "form-control", placeholder: "Enter Email" %>
  </div>

  <div class="form-group" align="center">
    <%= form.password_field :password_digest, class: "form-control", placeholder: "Enter Password" %>
  </div>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
