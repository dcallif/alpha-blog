<h1 align="center">All Alpha Bloggers</h1>
<hr>
<div class="col-xs-8 col-xs-offset-2" align="center">
  <div align="center">
    <%= will_paginate %>
  </div>
  <% @users.each do |user| %>
    <ul class="listing">
      <div id="outer-div" width="100%">
        <div id="inner-div">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li>
            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
          </li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all associated articles?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

</div>
