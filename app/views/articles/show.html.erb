<h2 align="center">Title:
  <%= @article.title %></h2>
<div class="col-xs-8 col-xs-offset-2">
  <hr>
  <blockquote><%= simple_format(@article.description) %></blockquote>
  <div class="article-meta-details">
    <small>Created by:
      <%= @article.user.username if @article.user %>,
      <%= time_ago_in_words(@article.created_at) %>
      ago, last updated:
      <%= time_ago_in_words(@article.updated_at) %>
      ago</small>
  </div>
  <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <div class="article-actions">
      <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this Article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to 'Back to Articles Listing', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
